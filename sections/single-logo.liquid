{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign custom_class = section.settings.custom_class

  unless custom_class == blank
    assign custom_class = custom_class | prepend: ' '
  endunless

  assign container = section.settings.container
  assign animation_effect = settings.animations
  assign animated = false
  if animation_effect != 'none'
    assign animated = true
    if section.settings.animations != 'inherit'
      assign animation_effect = section.settings.animations
    endif
  endif
%}

{% style %}
  .single-logo {
    text-align: center;
  }
  .single-logo .f-column {
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .single-logo__image {
    display: flex;
    justify-content: center;
  }
{% endstyle %}

<div id="{{ section_id }}" data-section-type="single-logo" data-section-id="{{ section.id }}" class="single-logo {{ custom_class }} f-section-padding color-{{ section.settings.color_schema }}" style="--section-padding-top: {{ section.settings.padding_top }}px ; --section-padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="{{ container }}">
    {% render 'index-section-header', animation_effect: animation_effect, section_settings: section.settings %}
    <div class="f-grid items-center f-grid-1-cols">
      {%- for block in section.blocks limit: 1 -%}  <!-- Limit to 1 block to display only one logo -->
        {%- liquid
          assign image = block.settings.image
          assign image_from_url = block.settings.image_from_url
          assign image_link = block.settings.image_link
          assign image_width = block.settings.image_width | append: '%'
          assign alt = 'Logo image ' | append: forloop.index
        -%}
        <div class="f-column" {{ block.shopify_attributes }}>
          <div class="block w-full {% if animated %} f-scroll-trigger animate--{{ animation_effect }}{% endif %}" {% if animated %} data-cascade style="--animation-order: {{ forloop.index }};" {% endif %}>
            <{% if image_link != blank %}a href="{{ image_link | escape }}" aria-label="{{ block.settings.image.alt | default: 'image-single-logo-' | append: forloop.index }}"{% else %}div{% endif %} class="single-logo__image block text-center flex items-center justify-center h-full{% if image_link != blank %} f-image-hover-effect__{{settings.image_hover_effect}}{% endif %}">
              {% if image_from_url != blank %}
                <div class="block overflow-hidden w-12/12" style="max-width: {{ image_width }}">
                  <div class="f-image">
                    <img class="mx-auto f-image" src="{{ image_from_url }}" width="auto" height="auto" loading="lazy" alt="{{ alt }}">
                  </div>
                </div>
              {% elsif image != blank %}
                <div class="block overflow-hidden w-12/12" style="max-width: {{ image_width }}">
                  {% render 'responsive-image', image: block.settings.image, alt: image.alt %}
                </div>
              {% else %}
                <svg class="placeholder-svg f-image" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 158.3 158.3"><path fill="#ccc" d="..."></path></svg>
              {% endif %}
            </{% if image_link != blank %}a{% else %}div{% endif %}>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Single Logo",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.common.general.name"
    },
    {
      "type": "select",
      "id": "container",
      "options": [
        {
          "value": "container",
          "label": "t:sections.common.container.fixed"
        },
        {
          "value": "container-fluid",
          "label": "t:sections.common.container.stretched"
        },
        {
          "value": "container-full",
          "label": "t:sections.common.container.fullwidth"
        }
      ],
      "default": "container",
      "label": "t:sections.common.container.label"
    },
    {
      "type": "color_scheme",
      "id": "color_schema",
      "label": "t:sections.common.color_schema.label",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "t:sections.common.header.name"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.common.header.heading",
      "default": "Single Logo"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:sections.common.heading-size.label",
      "default": "h2",
      "options": [
        {
          "value": "h3",
          "label": "t:sections.common.heading-size.options.option__0"
        },
        {
          "value": "h2",
          "label": "t:sections.common.heading-size.options.option__1"
        },
        {
          "value": "h1",
          "label": "t:sections.common.heading-size.options.option__2"
        },
        {
          "value": "h0",
          "label": "t:sections.common.heading-size.options.option__3"
        },
        {
          "value": "h-xl",
          "label": "t:sections.common.heading-size.options.option__4"
        }
      ]
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.common.header.description"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:sections.common.section_padding.top_padding.label",
      "default": 40,
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:sections.common.section_padding.bottom_padding.label",
      "default": 40,
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "custom_id",
      "label": "t:sections.common.custom_attr.custom_id"
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "t:sections.common.custom_attr.custom_class"
    },
    {
      "type": "header",
      "content": "t:settings_schema.animations.header.content"
    },
    {
      "type": "select",
      "id": "animations",
      "label": "t:settings_schema.animations.header__2.content",
      "default": "inherit",
      "options": [
        {"value": "inherit", "label": "t:settings_schema.animations.settings.animation.options.option_6"},
        {"value": "fade-in", "label": "t:settings_schema.animations.settings.animation.options.option_2"},
        {"value": "fade-in-up", "label": "t:settings_schema.animations.settings.animation.options.option_3"},
        {"value": "fade-in-left", "label": "t:settings_schema.animations.settings.animation.options.option_4"},
        {"value": "fade-in-right", "label": "t:settings_schema.animations.settings.animation.options.option_5"}
      ]
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "t:sections.single-logo.blocks.logo.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.single-logo.blocks.logo.settings.image.label"
        },
        {
          "type": "text",
          "id": "image_from_url",
          "label": "t:sections.single-logo.blocks.logo.settings.image_url.label",
          "info": "t:sections.single-logo.blocks.logo.settings.image_url.info"
        },
        {
          "type": "url",
          "id": "image_link",
          "label": "t:sections.single-logo.blocks.logo.settings.link.label",
          "info": "t:sections.single-logo.blocks.logo.settings.link.info"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "t:sections.single-logo.blocks.logo.settings.image_width.label",
          "default": 80,
          "min": 10,
          "max": 100,
          "step": 5,
          "unit": "%"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Single Logo",
      "category": "Custom"  
    }
  ]
}
{% endschema %}
